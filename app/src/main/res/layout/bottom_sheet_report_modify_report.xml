<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp">

        <!-- Cím -->
        <TextView
            android:id="@+id/tv_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_details"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"/>

        <!-- Közlekedési eszköz -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/mean_of_transport"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:includeFontPadding="true"/>

            <Spinner
                android:id="@+id/spinner_transport"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <!-- Probléma típusa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/type_of_problem"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:includeFontPadding="true"/>

            <Spinner
                android:id="@+id/spinner_problem_type"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <!-- Késés időtartama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:text="@string/delay_duration"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:includeFontPadding="true"/>

            <EditText
                android:id="@+id/et_delay_duration"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:hint="@string/_30"
                android:inputType="number"/>
        </LinearLayout>

        <!-- Indulási és célállomás -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/starting_city"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:includeFontPadding="true"/>

            <EditText
                android:id="@+id/startingCity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/destination_city"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:includeFontPadding="true"/>

            <EditText
                android:id="@+id/destinationCity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/indul_s_id_pontja"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />


            <Button
                android:id="@+id/btn_pick_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ADD8E6"
                android:textColor="@android:color/black"
                android:text="@string/id" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rkez_s_id_pontja"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/btn_pick_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:backgroundTint="#ADD8E6"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Probléma részletei -->
        <EditText
            android:id="@+id/et_problem_details"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/add_details_about_the_problem"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"/>

        <!-- Start / End gombok -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_set_start_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/edit_starting"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#ADD8E6"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btn_set_end_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/edit_destination"
                android:layout_marginStart="8dp"
                android:backgroundTint="#ADD8E6"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Like ikon + count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/like"
                    android:scaleType="centerInside"
                    android:onClick="likeReport"
                    android:contentDescription="@string/like"/>

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/like_count"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:minWidth="24dp"
                    android:gravity="center"
                    android:elevation="4dp"/>
            </LinearLayout>

            <!-- Spacer a like és a cancel gomb között -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Cancel gomb -->
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:backgroundTint="#F08080"
                android:textColor="@android:color/black"/>
        </LinearLayout>


        <!-- Edit + Delete gombok középre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit"
                android:backgroundTint="#ADD8E6"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete"
                android:backgroundTint="#FF6961"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
